<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nemgo.nemgo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>NEMgo</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <allow-navigation href="https://markof01.herokuapp.com/*" />
    <allow-navigation href="https://eguchi.herokuapp.com/*" />
    <allow-navigation href="https://*.facebook.com/*" />
    <allow-navigation href="https://*.twitter.com/*" />
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="ios">
        <icon height="180" src="res/icon/ios/Icon-App-60x60@3x.png" width="180" />
        <icon height="60" src="res/icon/ios/Icon-App-60x60@1x.png" width="60" />
        <icon height="120" src="res/icon/ios/Icon-App-60x60@2x.png" width="120" />
        <icon height="76" src="res/icon/ios/Icon-App-76x76@1x.png" width="76" />
        <icon height="152" src="res/icon/ios/Icon-App-76x76@2x.png" width="152" />
        <icon height="40" src="res/icon/ios/Icon-App-40x40@1x.png" width="40" />
        <icon height="80" src="res/icon/ios/Icon-App-40x40@2x.png" width="80" />
        <icon height="57" src="res/icon/ios/Icon-App-57x57@1x.png" width="57" />
        <icon height="114" src="res/icon/ios/Icon-App-57x57@2x.png" width="114" />
        <icon height="72" src="res/icon/ios/Icon-App-72x72@1x.png" width="72" />
        <icon height="144" src="res/icon/ios/Icon-App-72x72@2x.png" width="144" />
        <icon height="167" src="res/icon/ios/Icon-App-83.5x83.5@2x.png" width="167" />
        <icon height="29" src="res/icon/ios/Icon-App-29x29@1x.png" width="29" />
        <icon height="58" src="res/icon/ios/Icon-App-29x29@2x.png" width="58" />
        <icon height="50" src="res/icon/ios/Icon-Small-50x50@1x.png" width="50" />
        <icon height="100" src="res/icon/ios/Icon-Small-50x50@2x.png" width="100" />
        <icon height="167" src="res/icon/ios/Icon-App-83.5x83.5@2x.png" width="167" />
        <splash height="1136" src="res/screen/ios/Default-568h@2x.png" width="640" />
        <splash height="1334" src="res/screen/ios/Default-667h@2x.png" width="750" />
        <splash height="2208" src="res/screen/ios/Default-Portrait-736h@3x.png" width="1242" />
        <splash height="2436" src="res/screen/ios/Default-Portrait-iPhoneX.png" width="1125" />
        <splash height="2048" src="res/screen/ios/Default-Portrait@2x.png" width="1536" />
        <splash height="2732" src="res/screen/ios/IOS-iPadPro-portrait@2x.png" width="2048" />
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
            <string>Need location access to find NEM nearby.</string>
        </edit-config>
    </platform>
    <plugin name="cordova-plugin-console" spec="^1.1.0" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.1" />
    <plugin name="cordova-plugin-googlemaps" spec="^2.1.1">
        <variable name="API_KEY_FOR_ANDROID" value="XXXXXXXXXXXXX" />
        <variable name="API_KEY_FOR_IOS" value="AIzaSyCME_E3leKlnRUnEDV0uPjiwyDdTyEE5Ok" />
        <variable name="LOCATION_WHEN_IN_USE_DESCRIPTION" value="Show your location on the map" />
        <variable name="LOCATION_ALWAYS_USAGE_DESCRIPTION" value="Trace your location on the map" />
    </plugin>
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <preference name="SplashScreen" value="none" />
    <engine name="ios" spec="4.5.4" />
</widget>
